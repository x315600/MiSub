# MiSub Docker Environment Variables
# Copy this file to .env and fill in the values.

# A strong, random string for signing cookies
COOKIE_SECRET=changeme_a_very_strong_random_secret

# The password to access the admin panel
ADMIN_PASSWORD=changeme_your_admin_password

# A secret to protect the cron endpoint from public access
CRON_SECRET=changeme_a_strong_random_secret_for_cron

# Optional: Telegram Bot Token for notifications
TELEGRAM_BOT_TOKEN=

# Optional: Your Telegram Chat ID for notifications
TELEGRAM_CHAT_ID=
